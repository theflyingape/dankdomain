  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "launch ƊƊnet app",
      "cwd": "${workspaceFolder}/game",
      "program": "${workspaceFolder}/game/portal/app.js",
      "outFiles": [
        "${workspaceFolder}/game/portal"
      ],
      "sourceMaps": true,
      "stopOnEntry": false,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Launch localhost",
      "type": "chrome",
      "request": "launch",
      "url": "https://localhost:1939",
      "webRoot": "${workspaceFolder}/game/portal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "launch ƊƊplay bot",
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/game/main.js",
      "args": [ "IMA" ],
      "cwd": "${workspaceFolder}",
      "outFiles": [
        "${workspaceFolder}/game"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "launch ƊƊplay user",
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/game/main.js",
      "cwd": "${workspaceFolder}",
      "outFiles": [
        "${workspaceFolder}/game"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
